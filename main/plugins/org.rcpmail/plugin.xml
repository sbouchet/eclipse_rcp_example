<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.rcpmail.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="org.rcpmail.Perspective"
            id="org.rcpmail.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="org.rcpmail.View"
            id="org.rcpmail.view">
      </view>
      <view
            name="%view.name.0"
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="org.rcpmail.NavigationView"
            id="org.rcpmail.navigationView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="%category.name"
            id="org.rcpmail.category">
      </category>
      <command
            name="%command.name"
            description="%command.description"
            categoryId="org.rcpmail.category"
            id="org.rcpmail.open">
      </command>
      <command
            name="%command.name.0"
            description="%command.description.0"
            categoryId="org.rcpmail.category"
            id="org.rcpmail.openMessage">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.rcpmail.open"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="SHIFT+CTRL+2">
      </key>
      <key
            commandId="org.rcpmail.openMessage"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="SHIFT+CTRL+3">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="SHIFT+CTRL+X">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.rcpmail.application"
            name="RCP mail">
         <property
               name="aboutText"
               value="%aboutText">
         </property>
         <property
               name="startupForegroundColor"
               value="400040">
         </property>
         <property
               name="startupMessageRect"
               value="7,220,441,20">
         </property>
         <property
               name="startupProgressRect"
               value="0,280,455,15">
         </property>
         <property
               name="appName"
               value="RCP mail">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>

</plugin>
